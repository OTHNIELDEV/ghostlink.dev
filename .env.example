# GhostLink Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Core Application Settings
# ============================================
PROJECT_NAME=GhostLink
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-this-in-production
FRONTEND_URL=https://your-domain.com

# ============================================
# Database
# ============================================
# SQLite (Development)
# DATABASE_URL=sqlite+aiosqlite:///./ghostlink.db

# PostgreSQL (Production)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ghostlink

# ============================================
# Redis (Caching & Rate Limiting)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# OpenAI (Required for AI Analysis)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Stripe (Required for Payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_TAX_ENABLED=true

# Stripe Price IDs (Create these in your Stripe Dashboard)
# Recommended: separate month/year price IDs
STRIPE_PRICE_STARTER_MONTH=price_your_starter_month_price_id
STRIPE_PRICE_STARTER_YEAR=price_your_starter_year_price_id
STRIPE_PRICE_PRO_MONTH=price_your_pro_month_price_id
STRIPE_PRICE_PRO_YEAR=price_your_pro_year_price_id
STRIPE_PRICE_BUSINESS_MONTH=price_your_business_month_price_id
STRIPE_PRICE_BUSINESS_YEAR=price_your_business_year_price_id
STRIPE_PRICE_ENTERPRISE_MONTH=price_your_enterprise_month_price_id
STRIPE_PRICE_ENTERPRISE_YEAR=price_your_enterprise_year_price_id

# Backward compatibility (single price key)
# STRIPE_PRICE_STARTER=price_...
# STRIPE_PRICE_PRO=price_...
# STRIPE_PRICE_BUSINESS=price_...
# STRIPE_PRICE_ENTERPRISE=price_...

# ============================================
# OAuth (Optional - for Social Login)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# CDN (Optional - for tracking script)
# ============================================
CDN_BASE_URL=https://cdn.your-domain.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# CORS (for API access)
# ============================================
BACKEND_CORS_ORIGINS=["https://your-domain.com", "https://app.your-domain.com"]

# ============================================
# Security
# ============================================
ACCESS_TOKEN_EXPIRE_MINUTES=11520
BRIDGE_SIGNING_SECRET=your-bridge-signing-secret
BRIDGE_EVENT_TOKEN_TTL_SECONDS=900
SALES_CONTACT_EMAIL=sales@your-domain.com
