# GhostLink - Vercel 프로덕션 환경변수 템플릿
# 작성일: 2026-02-12
# 사용 방법:
# 1) 모든 <...> 자리표시자를 실제 값으로 교체
# 2) Vercel Project Settings > Environment Variables (Production)에 등록
# 3) Vercel CLI 사용 시: vercel env add <KEY> production

# 핵심 런타임
ENVIRONMENT=production
FRONTEND_URL=https://<your-production-domain>
SECRET_KEY=<generate-strong-random-secret>
DATABASE_URL=postgresql+asyncpg://<db_user>:<db_password>@<db_host>:<db_port>/<db_name>
REDIS_URL=redis://<redis-host>:6379/0

# CORS (JSON 배열 문자열)
BACKEND_CORS_ORIGINS=["https://<your-production-domain>"]

# AI 제공자
OPENAI_API_KEY=<openai-api-key>

# Stripe (프로덕션에서는 반드시 LIVE 키 사용)
STRIPE_SECRET_KEY=sk_live_<replace>
STRIPE_PUBLISHABLE_KEY=pk_live_<replace>
STRIPE_WEBHOOK_SECRET=whsec_<replace>
STRIPE_TAX_ENABLED=true

# Stripe 가격 ID (3단계 공개 요금제)
STRIPE_PRICE_STARTER_MONTH=price_<replace>
STRIPE_PRICE_STARTER_YEAR=price_<replace>
STRIPE_PRICE_PRO_MONTH=price_<replace>
STRIPE_PRICE_PRO_YEAR=price_<replace>

# Enterprise:
# 엔터프라이즈가 영업 문의 전용이면 비워둘 수 있습니다.
# 엔터프라이즈를 Stripe Checkout으로 처리하면 두 값을 모두 설정하세요.
STRIPE_PRICE_ENTERPRISE_MONTH=
STRIPE_PRICE_ENTERPRISE_YEAR=

# 영업 연락처
SALES_CONTACT_EMAIL=sales@ghostlink.io

# OAuth (선택)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Bridge / Attribution 보안 (권장)
BRIDGE_SIGNING_SECRET=<strong-random-secret>
BRIDGE_EVENT_TOKEN_TTL_SECONDS=900

# API/요청 제한 (기본 권장값)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# DB 시작 동작 (프로덕션 권장값)
DB_AUTO_INIT_ON_STARTUP=false

# ------------------------------
# 레거시 호환 (선택)
# ------------------------------
# 과거 데이터/웹훅 호환용 fallback 키입니다.
# 마이그레이션 기간에는 최신 요금제 키와 동일 값으로 맞춰둘 수 있습니다.
STRIPE_PRICE_STARTER=price_<optional-fallback-starter>
STRIPE_PRICE_PRO=price_<optional-fallback-pro>
STRIPE_PRICE_ENTERPRISE=price_<optional-fallback-enterprise>
STRIPE_PRICE_BUSINESS_MONTH=price_<optional-map-to-pro-month>
STRIPE_PRICE_BUSINESS_YEAR=price_<optional-map-to-pro-year>
STRIPE_PRICE_BUSINESS=price_<optional-map-to-pro>
