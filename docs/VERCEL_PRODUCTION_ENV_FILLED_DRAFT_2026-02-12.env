# GhostLink - Vercel 프로덕션 환경변수 (채워진 초안)
# 작성일: 2026-02-12
#
# 이 초안의 기준:
# - 저장소 내 대표 서비스 URL: https://ghostlink.dev
# - 현재 Vercel 프로젝트명: ghostlink-dev
# - app/core/config.py의 런타임 기본값
#
# 중요:
# - 적용 전에 모든 <...> 자리표시자를 실제 값으로 교체하세요.
# - 프로덕션 Stripe 키는 반드시 LIVE여야 합니다.

# 핵심 런타임
ENVIRONMENT=production
FRONTEND_URL=https://ghostlink.dev
SECRET_KEY=<REPLACE_WITH_64+_CHAR_RANDOM_SECRET>
DATABASE_URL=postgresql+asyncpg://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>
REDIS_URL=redis://<REDIS_HOST>:6379/0

# CORS
# 안정적인 롤아웃을 위해 메인 도메인 + 현재 Vercel 호스트를 포함합니다.
BACKEND_CORS_ORIGINS=["https://ghostlink.dev","https://ghostlink-dev.vercel.app"]

# AI 제공자
OPENAI_API_KEY=<OPENAI_API_KEY>

# Stripe (LIVE 필수)
STRIPE_SECRET_KEY=sk_live_<REPLACE>
STRIPE_PUBLISHABLE_KEY=pk_live_<REPLACE>
STRIPE_WEBHOOK_SECRET=whsec_<REPLACE>
STRIPE_TAX_ENABLED=true

# 3단계 요금제 가격 ID (필수)
STRIPE_PRICE_STARTER_MONTH=price_<REPLACE>
STRIPE_PRICE_STARTER_YEAR=price_<REPLACE>
STRIPE_PRICE_PRO_MONTH=price_<REPLACE>
STRIPE_PRICE_PRO_YEAR=price_<REPLACE>

# Enterprise
# 엔터프라이즈를 영업 문의 전용으로 운영하면 비워둘 수 있습니다.
STRIPE_PRICE_ENTERPRISE_MONTH=
STRIPE_PRICE_ENTERPRISE_YEAR=

# 영업/지원 연락처
SALES_CONTACT_EMAIL=sales@ghostlink.io

# OAuth (선택)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Bridge 보안
BRIDGE_SIGNING_SECRET=<REPLACE_WITH_STRONG_RANDOM_SECRET>
BRIDGE_EVENT_TOKEN_TTL_SECONDS=900

# 제한/인증
RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# 프로덕션 시작 동작
DB_AUTO_INIT_ON_STARTUP=false

# 레거시 호환 (마이그레이션 기간 선택)
STRIPE_PRICE_STARTER=price_<OPTIONAL_FALLBACK>
STRIPE_PRICE_PRO=price_<OPTIONAL_FALLBACK>
STRIPE_PRICE_ENTERPRISE=price_<OPTIONAL_FALLBACK>
STRIPE_PRICE_BUSINESS_MONTH=price_<OPTIONAL_MAP_TO_PRO_MONTH>
STRIPE_PRICE_BUSINESS_YEAR=price_<OPTIONAL_MAP_TO_PRO_YEAR>
STRIPE_PRICE_BUSINESS=price_<OPTIONAL_MAP_TO_PRO>
